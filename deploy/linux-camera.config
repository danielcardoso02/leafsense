# Linux Kernel Configuration Fragment for Raspberry Pi Camera
# This enables the camera drivers in the Linux kernel

# Media support
CONFIG_MEDIA_SUPPORT=y
CONFIG_MEDIA_CAMERA_SUPPORT=y
CONFIG_VIDEO_DEV=y
CONFIG_VIDEO_V4L2=y
CONFIG_VIDEO_V4L2_SUBDEV_API=y

# Broadcom VideoCore camera interface
CONFIG_VIDEO_BCM2835=m
CONFIG_VIDEO_BCM2835_UNICAM=m
CONFIG_VIDEO_BCM2835_ISP=m

# Camera sensor drivers
CONFIG_VIDEO_OV5647=m
CONFIG_VIDEO_IMX219=m

# Media controller
CONFIG_MEDIA_CONTROLLER=y
CONFIG_MEDIA_CONTROLLER_DVB=y

# V4L2 memory-to-memory
CONFIG_V4L2_MEM2MEM_DEV=m

# DMA contiguous memory allocator
CONFIG_CMA=y
CONFIG_DMA_CMA=y
